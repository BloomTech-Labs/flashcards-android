<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.lambda.mnemecards.cards.CardsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".overview.HomeFragment">

        <FrameLayout
            android:id="@+id/fl_cards"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_cards_deck_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:text="@{viewModel.displayDeckName}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Spanish" />

                <TextView
                    android:id="@+id/tv_cards_card_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:text="@{Integer.toString(viewModel.displayDeckCardAmount)}"
                    app:layout_constraintEnd_toStartOf="@+id/tv_cards_mastered_amount"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteY="52dp"
                    tools:text="12" />

                <TextView
                    android:id="@+id/tv_cards_mastered_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:text="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_cards_card_amount"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteY="52dp"
                    tools:text="8" />

                <TextView
                    android:id="@+id/tv_cards_cards"
                    app:layout_constraintTop_toBottomOf="@id/tv_cards_card_amount"
                    android:layout_width="wrap_content"
                    android:text="@string/cards"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="@id/tv_cards_card_amount"
                    app:layout_constraintEnd_toEndOf="@id/tv_cards_card_amount"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_cards_mastered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="#FFFFFF"
                    app:layout_constraintTop_toBottomOf="@id/tv_cards_mastered_amount"
                    app:layout_constraintStart_toStartOf="@id/tv_cards_mastered_amount"
                    app:layout_constraintEnd_toEndOf="@id/tv_cards_mastered_amount"
                    android:layout_marginTop="8dp"
                    android:text="@string/mastered"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_cards_display_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl_cards"
            android:layout_marginTop="32dp"
            android:background="#F3ECE3"
            app:layout_constraintWidth_percent=".85"
            app:layout_constraintHeight_percent=".3"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tv_cards_display"
            app:layout_constraintTop_toTopOf="@id/fl_cards_display_card"
            app:layout_constraintStart_toStartOf="@id/fl_cards_display_card"
            app:layout_constraintEnd_toEndOf="@id/fl_cards_display_card"
            app:layout_constraintBottom_toBottomOf="@id/fl_cards_display_card"
            android:text="@{viewModel.displayCard}"
            tools:text="Leche"
            android:textSize="48sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_cards_flip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl_cards_display_card"
            android:layout_marginTop="32dp"
            android:onClick="@{() -> viewModel.displayCard()}"
            app:layout_constraintWidth_percent=".85"
            android:text="@string/flip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>